#include <stdio.h>
#include <stdlib.h>

int sumar(int numUno, int numDos, int* respuesta);


int main(void) {
	setbuf(stdout, NULL);

	printf("Ingrese un numero");


	return EXIT_SUCCESS;
}

int sumar(int numUno, int numDos, int* respuesta){

	respuesta = -1;

	if(respuesta == 0 ){
		respuesta = numUno + numDos;


		return respuesta;
}
