#include <stdio.h>
#include <stdlib.h>

void mostrarNumero(int num);
void mostrarNumeroFlotante(float numFlotante);

int main(void) {
	setbuf(stdout, NULL);

	int numero;
	float numFlotante;




	mostrarNumero(numero);
	printf("El numero entero es %d", numero);
	mostrarNumeroFlotante(numFlotante);
	printf("El numero flotante es %f", numFlotante);












	return EXIT_SUCCESS;
}


void mostrarNumero(int numero){


	do{
		printf("Ingrese un numero entero");
		scanf("%d", &numero);
	}while( numero < 1 || numero > 20);

}


void mostrarNumeroFlotante(float numFlotante){


	do{
		printf("Ingrese un numero flotante");
		scanf("%f", &numFlotante);
		}while( numFlotante < 1 || numFlotante > 20);


}



