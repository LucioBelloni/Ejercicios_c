#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	char respuesta;

	do{
		printf("Ingrese la opcion\n"
			"a -Iniciar \n"
			"b -Procesar \n"
			"c -Finalizar \n"
			"d -Salir\n");
		fflush(stdin);
		scanf("c",&respuesta);


	}while(respuesta == 'n');







	return EXIT_SUCCESS;
}
